    <div id="root"></div>

    <script type="text/babel">
        //ì•„ê¹Œ í•œ 01.key.html ë‚´ìš©ê³¼ ë‹¬ë¦¬ listì— key ê°’ì„ ë„£ì–´ë³¸ë‹¤  250626 13:24
        const fruits = ['ğŸ¥', 'ğŸ', 'ğŸŒ', 'ğŸ‘']

        // 1. Make function type component 
        function FruitList(){
            return(
                <div style={{border: '1px solid gray', padding: '10px'}}>
                    <ul>
                        {/*key: Reactê°€ ë¦¬ìŠ¤íŠ¸ë¥¼ ëœë”ë§í•  ë•Œ ê° í•­ëª©ì„ êµ¬ë¶„í•  ìˆ˜ ìˆê²Œ ë„ì™€ì£¼ëŠ” ê³ ìœ í•œ ê°’*/}
                        {fruits.map((fruit, index) => (
                            <li key={index}>{fruit}</li>
                        ))}
                    </ul>  
                </div>   
            )
        }

        //2. Make another function type component
        //2-1. ê°ì²´ ë°°ì—´ ì„ ì–¸
        const users = [
            {id: 1, name: 'Apple'},
            {id: 2, name: 'Lemon'},
            {id: 3, name: 'Orange'}
        ]

        function UserList(){
            return(
                <>
                    <h2>List of users</h2>
                    <ul>
                        {users.map(user => (
                            <li key={user.id}>
                                {user.name}
                            </li>
                        ))}
                    </ul>
                </>
            )
        }

        function App(){
            return (
                <>
                    <FruitList/>
                    <UserList/>
                </>
            )
        }
        
        ReactDOM.createRoot(document.getElementById('root')).render(<App />);
    </script>
    
</body>
