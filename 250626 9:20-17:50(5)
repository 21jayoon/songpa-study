    <script type="text/babel">
        // map method ì—°ìŠµ 250626 13:08
        //1. ë°°ì—´ í•˜ë‚˜ ìƒì„±
        const numbers = [1,2,3,4,5]
        const results = numbers.map(num => num * num)
        // numì´ë¼ëŠ” ì´ë¦„ìœ¼ë¡œ ìƒˆë¡œìš´ ë°°ì—´ì„ ë§Œë“¤ì–´ ì•ˆì— num*numí•œ ê°’ì„ ë„£ëŠ”ë‹¤. num ë°°ì—´ì„ resultsë¼ëŠ” ìƒˆë¡œìš´ ë°°ì—´ì— ë„£ê² ë‹¤.
        console.log(results);

        //2. String array
        const fruit = ['ğŸ¥', 'ğŸ', 'ğŸŒ']
        fruit.map((currentValue, index, array) => {
            //ì—¬ëŸ¬ ê°œë¥¼ í•œ ë²ˆì— mapìœ¼ë¡œ ë³´ë‚´ëŠ”(?) ê²½ìš° ()ê´„í˜¸ë¡œ ë¬¶ì–´ì„œ ì‘ì„±
            //(currentValue, index, array)
            console.log(currentValue);
            console.log(index);
            console.log(array);
        })

        //3. function type component
        function Items({names}){
            //{name} -> props   ì´ ê°’ì˜ ì„¤ì •ì€ ë¶€ëª¨ propsì—ì„œ ì„¤ì •ë  ê²ƒì„
            return(
                <ul>
                    {names.map(name => <li> {name}</li>)}
                </ul> 
            )         
        }

        const names = ['Panda', 'Koala', 'Monkey']

        ReactDOM.createRoot(document.getElementById('root')).render(<Items names={names}/>);
        //<Items names={names}/> : namesë¼ëŠ” í‚¤ë¡œ propsë¥¼ ë‚´ë ¤ì£¼ë©° êµ¬ì¡°ë¶„í•´ í• ë‹¹ìœ¼ë¡œ ì‚¬ìš©í•¨
    </script>
    
